{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "hidden": true,
      "name": "settings-project",
      "binaryDir": "${sourceDir}/project_files",
      "cacheVariables": {
        "PE_BUILD_DIR": {
          "type": "STRING",
          "value": "${sourceDir}/builds"
        },
        "PE_GLES": "OFF",
        "PE_VULKAN": "OFF",
        "PE_MOLTEN": "OFF",
        "VK_STATIC": "OFF"
      }
    },
    {
      "hidden": true,
      "name": "settings-vulkan",
      "cacheVariables": {
        "PE_VULKAN_VERSION": {
          "type": "STRING",
          "value": "1.2.148"
        },
        "PE_VULKAN": "ON",
        "VK_STATIC": "OFF"
      }
    },
    {
      "hidden": true,
      "name": "settings-gles",
      "cacheVariables": {
        "PE_GLES": "ON"
      }
    },
    {
      "hidden": true,
      "name": "settings-molten",
      "cacheVariables": {
        "PE_MOLTEN": "OFF"
      }
    },
    {
      "hidden": true,
      "name": "macos-base",
      "displayName": "MacOS",
      "inherits": [
        "settings-project"
      ],
      "description": "Base configuration for MacOS distro",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "PE_PLATFORM": "MACOS",
        "PE_CORE": "OFF"
      }
    },
    {
      "hidden": true,
      "name": "macos-base-debug",
      "displayName": "MacOS",
      "inherits": [
        "macos-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PE_MODE": "debug"
      }
    },
    {
      "hidden": true,
      "name": "macos-base-release",
      "displayName": "MacOS",
      "inherits": [
        "macos-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PE_MODE": "release"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "MacOS (Debug)",
      "inherits": [
        "macos-base-debug"
      ]
    },
    {
      "name": "macos-release",
      "displayName": "MacOS (Release)",
      "inherits": [
        "macos-base-release"
      ]
    },
    {
      "hidden": true,
      "name": "gnu-linux-base",
      "displayName": "GNU/Linux",
      "inherits": [
        "settings-project"
      ],
      "description": "Base configuration for GNU/Linux types of distro",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "PE_PLATFORM": "LINUX"
      }
    },
    {
      "hidden": true,
      "name": "gnu-linux-base-debug",
      "displayName": "GNU/Linux",
      "inherits": [
        "gnu-linux-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PE_MODE": "debug"
      }
    },
    {
      "hidden": true,
      "name": "gnu-linux-base-release",
      "displayName": "GNU/Linux",
      "inherits": [
        "gnu-linux-base"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PE_MODE": "release"
      }
    },
    {
      "name": "gnu-linux-debug-all",
      "displayName": "GNU/Linux Vulkan/GLES (Debug)",
      "inherits": [
        "settings-vulkan",
        "settings-gles",
        "gnu-linux-base-debug"
      ]
    },
    {
      "name": "gnu-linux-release-all",
      "displayName": "GNU/Linux Vulkan/GLES (Release)",
      "inherits": [
        "settings-vulkan",
        "settings-gles",
        "gnu-linux-base-release"
      ]
    },
    {
      "name": "gnu-linux-debug-vulkan",
      "displayName": "GNU/Linux Vulkan (Debug)",
      "inherits": [
        "settings-vulkan",
        "gnu-linux-base-debug"
      ]
    },
    {
      "name": "gnu-linux-release-vulkan",
      "displayName": "GNU/Linux Vulkan (Release)",
      "inherits": [
        "settings-vulkan",
        "gnu-linux-base-release"
      ]
    },
    {
      "hidden": true,
      "name": "windows-64-base",
      "displayName": "Windows 64bit",
      "inherits": [
        "settings-project"
      ],
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "${sourceDir}/project_files/x64",
      "description": "Base configuration for Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "PE_PLATFORM": "WINDOWS",
        "PE_BUILD_DIR": {
          "type": "STRING",
          "value": "${sourceDir}/builds/x64"
        }
      }
    },
    {
      "hidden": true,
      "name": "windows-32-base",
      "displayName": "Windows 32bit",
      "inherits": [
        "settings-project"
      ],
      "generator": "Visual Studio 17 2022",
      "architecture": "Win32",
      "binaryDir": "${sourceDir}/project_files/Win32",
      "description": "Base configuration for Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "PE_PLATFORM": "WINDOWS",
        "PE_BUILD_DIR": {
          "type": "STRING",
          "value": "${sourceDir}/builds/Win32"
        }
      }
    },
    {
      "hidden": true,
      "name": "windows-64-all",
      "displayName": "Windows Vulkan/GLES 64bit",
      "inherits": [
        "settings-vulkan",
        "settings-gles",
        "windows-64-base"
      ]
    },
    {
      "hidden": true,
      "name": "windows-32-all",
      "displayName": "Windows Vulkan/GLES 32bit",
      "inherits": [
        "settings-vulkan",
        "settings-gles",
        "windows-32-base"
      ]
    },
    {
      "name": "windows-64-debug-all",
      "displayName": "Windows Vulkan/GLES 64bit (Debug)",
      "inherits": [
        "windows-64-all"
      ],
      "cacheVariables": {
        "PE_MODE": "debug"
      }
    },
    {
      "name": "windows-64-release-all",
      "displayName": "Windows Vulkan/GLES 64bit (Release)",
      "inherits": [
        "windows-64-all"
      ],
      "cacheVariables": {
        "PE_MODE": "release"
      }
    },
    {
      "hidden": true,
      "name": "windows-64-vulkan",
      "displayName": "Windows Vulkan 64bit",
      "inherits": [
        "settings-vulkan",
        "windows-64-base"
      ]
    },
    {
      "name": "windows-64-debug-vulkan",
      "displayName": "Windows Vulkan 64bit (Debug)",
      "inherits": [
        "windows-64-vulkan"
      ],
      "cacheVariables": {
        "PE_MODE": "debug"
      }
    },
    {
      "name": "windows-64-release-vulkan",
      "displayName": "Windows Vulkan 64bit (Release)",
      "inherits": [
        "windows-64-vulkan"
      ],
      "cacheVariables": {
        "PE_MODE": "release"
      }
    },
    {
      "name": "windows-32-debug-all",
      "displayName": "Windows Vulkan/GLES 32bit (Debug)",
      "inherits": [
        "windows-32-all"
      ],
      "cacheVariables": {
        "PE_MODE": "debug"
      }
    },
    {
      "name": "windows-32-release-all",
      "displayName": "Windows Vulkan/GLES 32bit (Release)",
      "inherits": [
        "windows-32-all"
      ],
      "cacheVariables": {
        "PE_MODE": "release"
      }
    },
    {
      "hidden": true,
      "name": "windows-32-vulkan",
      "displayName": "Windows Vulkan 32bit",
      "inherits": [
        "settings-vulkan",
        "windows-32-base"
      ]
    },
    {
      "name": "windows-32-debug-vulkan",
      "displayName": "Windows Vulkan 32bit (Debug)",
      "inherits": [
        "windows-32-vulkan"
      ],
      "cacheVariables": {
        "PE_MODE": "debug"
      }
    },
    {
      "name": "windows-32-release-vulkan",
      "displayName": "Windows Vulkan 32bit (Release)",
      "inherits": [
        "windows-32-vulkan"
      ],
      "cacheVariables": {
        "PE_MODE": "release"
      }
    },
    {
      "name": "android-release-vulkan",
      "displayName": "Android Vulkan (Release)",
      "inherits": [
        "settings-vulkan",
        "settings-project"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "PE_MODE": "release",
        "PE_PLATFORM": "ANDROID"
      }
    },
    {
      "name": "android-debug-vulkan",
      "displayName": "Android Vulkan (Debug)",
      "inherits": [
        "settings-vulkan",
        "settings-project"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PE_MODE": "debug",
        "PE_PLATFORM": "ANDROID"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-64-debug-all",
      "displayName": "Windows Vulkan/GLES 64bit (Debug)",
      "configurePreset": "windows-64-debug-all",
      "configuration": "Debug"
    },
    {
